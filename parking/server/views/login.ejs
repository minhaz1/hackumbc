  <body>
    <!-- Nav Bar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Learn with me</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active">
              <a href="#">Home</a>
            </li>
            <li>
              <a href="#about">About</a>
            </li>
            <li>
              <a href="#contact">Contact</a>
            </li>
          </ul>
		<% if (!user) { %>
          <form action="/login" method="post" class="navbar-form navbar-right">

            <div class="form-group">
            <input name="username" type="text" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input name="password" type="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">
              Sign in
            </button>
		<% } else { %>
		    <form action="/logout" method="get" class="navbar-form navbar-right">

            <button type="submit" class="btn btn-success">
              Sign Out
            </button>
		<% } %>
        </form>

        </div>
        <!--/.nav-collapse -->
      </div>
    </div>
    <!-- Header -->
    <div class="jumbotron">
      <div class="container">
        <h1>
          Welcome to Learn with me
        </h1>
        <p>
          <a class="btn btn-primary btn-lg">Learn more</a>
        </p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 panel panel-default">
          <h1 class="margin-base-vertical">
            Sign Up
          </h1>
          <form class="margin-base-vertical">
            <p class="input-group">
              <span class="input-group-addon">First Name:</span>
              <input type="text" class="form-control input-lg" name="firstName" placeholder="jonsnow@knowsnothi.ng">
            </p>
            <p class="input-group">
              <span class="input-group-addon">Last Name: </span>
              <input type="text" class="form-control input-lg" name="lastName" placeholder="jonsnow@knowsnothi.ng">
            </p>
            <p class="input-group">
              <span class="input-group-addon">Email: </span>
              <input type="text" class="form-control input-lg" name="email" placeholder="jonsnow@knowsnothi.ng">
            </p>
